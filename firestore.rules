rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: readable by all authed, writable only by owner
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Likes: only readable/writable by owner
    match /likes/{userId}/liked/{otherId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Passes: only readable/writable by owner
    match /passes/{userId}/passed/{otherId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Matches: only accessible by participants
    match /matches/{matchId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.users;
    }
    
    // Messages: only accessible by match participants
    match /matches/{matchId}/messages/{messageId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.users;
    }
  }
}
